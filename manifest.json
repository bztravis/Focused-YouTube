{
    "name": "Focused YouTube",
    "description": "Hide YouTube's recommendation thumbnails to avoid distractions.",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons": {
        "16": "/images/icon16.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "css": ["/style.css"],
            "js": ["/play.js"]
        }
    ]
}